<div class="container">
  {{#if user}}
  <div class="d-flex flex-row-reverse">
    <form id="logout_form" method="POST">
      <div class="row">

        <div class="col">
          <h5>
            User: {{user.email}}, Role: {{user.role}}
          </h5>
        </div>
        <div class="col">
          <button type="submit" id="logout_button" class="btn btn-outline-primary">Log out</button>
        </div>

      </div>
    </form>
  </div>
  {{/if}}

  <div>
    <h1>
      Reset password
    </h1>
  </div>
  <hr />
  <form id="reset_password_form" method="POST">
    <div>
      <div class="row g-3 align-items-center">
        <div class="col-auto">
          <label for="email" class="col-form-label">Email</label>
        </div>
        <div class="col-auto">
          <input type="email" name="email" id="email_input" class="form-control">
        </div>
      </div>
    </div>

    <div>

      {{#if user}}
      <button id="login_button_disabled" class="btn btn-primary" disabled="true">Reset password</button>
      {{else}}
      <button type="submit" id="login_button" class="btn btn-primary">Reset password</button>
      {{/if}}
      <a href="/register" type="button" id="register_button" class="btn btn-outline-primary">Register</a>
      <a href="/login" type="button" id="login_button" class="btn btn-outline-primary">Log in</a>
    </div>
  </form>
  <hr />
  <input type="text" value="{{message.text}}" id="message.text" hidden></input>
  <input type="text" value="{{message.type}}" id="message.type" hidden></input>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/static/js/reset-password.js"></script>
<script src="/static/js/logout.js"></script>