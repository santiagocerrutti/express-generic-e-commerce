<div class="container">
  {{#if user}}
  <div class="d-flex flex-row-reverse">
    <form action="/auth/logout" method="POST">
      <div class="row">

        <div class="col">
          <h5>
            User: {{user.email}}, Role: {{user.role}}
          </h5>
        </div>
        <div class="col">
          <button type="submit" id="logout_button" class="btn btn-outline-primary">Log out</button>
        </div>

      </div>
    </form>
  </div>
  {{/if}}

  <div>
    <h1>
      Log In
    </h1>
  </div>
  <hr />
  <form action="/auth/login" method="POST">
    <div>
      <div class="row g-3 align-items-center">
        <div class="col-auto">
          <label for="email" class="col-form-label">Email</label>
        </div>
        <div class="col-auto">
          <input type="email" name="email" id="email_input" class="form-control">
        </div>
      </div>

      <div class="row g-3 align-items-center">
        <div class="col-auto">
          <label for="password" class="col-form-label">Password</label>
        </div>
        <div class="col-auto">
          <input type="password" name="password" id="password_input" class="form-control">
        </div>
      </div>
    </div>

    <div>

      {{#if user}}
      <button id="login_button_disabled" class="btn btn-primary" disabled="true">Log in</button>
      {{else}}
      <button type="submit" id="login_button" class="btn btn-primary">Log in</button>
      {{/if}}
      <a href="/register" type="button" id="register_button" class="btn btn-outline-primary">Register</a>
    </div>
  </form>
  <hr />
</div>